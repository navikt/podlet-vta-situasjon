{
  "name": "podlet-vta-situasjon",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "6.0.0",
    "@metrics/prometheus-consumer": "3.0.1",
    "@podium/podlet": "4.4.14",
    "@sentry/browser": "6.0.0",
    "classnames": "^2.2.6",
    "craco-less": "1.17.1",
    "express": "4.17.1",
    "less": "3.13.1",
    "lodash.throttle": "^4.1.1",
    "nav-frontend-alertstriper": "3.0.42",
    "nav-frontend-alertstriper-style": "2.0.33",
    "nav-frontend-core": "^5.0.11",
    "nav-frontend-ikoner-assets": "2.0.8",
    "nav-frontend-js-utils": "^1.0.15",
    "nav-frontend-knapper": "^2.0.27",
    "nav-frontend-knapper-style": "^1.0.13",
    "nav-frontend-lenker": "1.0.56",
    "nav-frontend-lenker-style": "0.2.41",
    "nav-frontend-paneler": "2.0.25",
    "nav-frontend-paneler-style": "0.3.33",
    "nav-frontend-typografi": "2.0.39",
    "nav-frontend-typografi-style": "^1.0.32",
    "prom-client": "13.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "17.0.1",
    "swr": "0.4.0"
  },
  "devDependencies": {
    "@sentry/cli": "1.61.0",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.3",
    "@testing-library/user-event": "12.6.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "msw": "0.25.0",
    "prettier": "2.2.1",
    "react-scripts": "4.0.1"
  },
  "scripts": {
    "start": "NODE_ENV=development craco start",
    "build": "REACT_APP_SENTRY_RELEASE=$(git rev-parse --short HEAD) craco build",
    "test": "npm run lint && craco test",
    "test-ci": "npm run lint && CI=true craco test",
    "refresh": "rm -rf node_modules && rm package-lock.json && npm i",
    "podlet": "node podlet.js",
    "lint": "eslint --ext .js src",
    "sentry-release": "(export SENTRY_RELEASE=$(git rev-parse --short HEAD); node scripts/sentry-release)"
  },
  "eslintConfig": {
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test-ci"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md,ts,tsx}": "prettier --write"
  }
}
